  "license": "Commercial",
  "dependencies": {
    "forever": "latest",
    "express": "latest",
    "ajv": "^5.2.2",
    "amqplib": "^0.5.1",
    "request-promise":"latest"
  },
  "devDependencies": {
    "mocha": "^3.4.2",
    "chai": "^4.1.0",
